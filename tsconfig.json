{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "baseUrl": ".",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true /* Skip type checking all .d.ts files. */,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
